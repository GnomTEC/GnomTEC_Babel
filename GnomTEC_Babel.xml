<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Frame name="GNOMTEC_BABEL_FRAME" parent="UIParent" toplevel="true" movable="true" clampedToScreen="true" hidden="true">
		<Size x="130" y="32" />
		<Anchors>
			<Anchor point="CENTER" relativePoint="CENTER"/>
		</Anchors>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize val="16"/>
			<TileSize val="16"/>
			<Color r="0.25" g="0.25" b="0.25"/>
			<BackgroundInsets left="5" right="5" top="5" bottom="5"/>
		</Backdrop>
		<Frames>
			<Button name="$parent_LANGUAGE" inherits="UIPanelButtonTemplate">
				<Size x="120" y="22" />
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset x="5" y="-5" />
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>
						self:SetText(GnomTEC_Babel_Options["Language"]);
					</OnLoad>
					<OnClick>
						GnomTEC_Babel:ChangeLanguage();		
					</OnClick>
				</Scripts>
			</Button>				
		</Frames>			
		<Scripts>
			<OnMouseDown>
				self:StartMoving();
			</OnMouseDown>
			<OnMouseUp>self:StopMovingOrSizing();</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>